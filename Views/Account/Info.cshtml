@{
    ViewData["Title"] = "Tài khoản";
}
<div class="container my-5 py-5">
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="border p-5">
                <div>
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Avatar">
                            </div>
                            <h5 class="user-name fs-1">Yuki Hayashi</h5>
                            <h6 class="user-email fs-4">yuki@Maxwell.com</h6>
                        </div>
                        <div class="about">
                            <p class="fs-3">
                                Họ và tên: Nguyễn Văn A
                            </p>
                            <p class="fs-3">
                                Số điện thoại: 092131242
                            </p>
                        </div>

                        <div class="d-flex justify-content-center">
                            <a class="_btn" asp-controller="Cart" asp-action=""><p class="text-white mb-0 text-center">Lịch sử đơn hàng</p></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12 pt-3 px-5">
            <div class="h-100">
                <div>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mb-2 text-primary fs-2">Thông tin cá nhân</h6>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" id="fullName" placeholder="Họ và Tên">
                            </div>
                        </div>

                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" id="phone" placeholder="Số điện thoại">
                            </div>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <input type="email" class="_form-input" id="eMail" placeholder="Email">
                            </div>
                        </div>
                    </div>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mt-3 mb-2 text-primary fs-2">Địa chỉ</h6>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" id="street" placeholder="Địa chỉ">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" id="city" placeholder="Tỉnh thành">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" id="district" placeholder="Quận/huyện">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" id="ward" placeholder="Phường/xã">
                            </div>
                        </div>
                    </div>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mt-3 mb-2 text-primary fs-2">Thẻ Visa</h6>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" placeholder="Số thẻ">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="date" class="_form-input" placeholder="Ngày hết hạn">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input type="text" class="_form-input" placeholder="CVV/CVV2">
                            </div>
                        </div>
                    </div>
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="_btn my-0">Cập nhật</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>