@{
    ViewData["Title"] = "Thông tin tài khoản";
}

@model Clothing_Store.Models.AccountInfoModel;

<div class="container my-5 py-5">
    <div class="row gutters">
        <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
            <div class="border p-5">
                <div>
                    <div class="account-settings">
                        <div class="user-profile">
                            <div class="user-avatar">
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Avatar">
                            </div>
                            <h5 class="user-name fs-1 __break-word-dots">@Model.Username</h5>
                            <h6 class="user-email fs-4 __break-word-dots">@Model.Email</h6>
                        </div>
                        @if (!Model.Fullname.Equals(""))
                        {
                            <div class="about">
                                <p class="fs-3 __break-word-dots">
                                    Họ và tên: @Model.Fullname
                                </p>
                                <p class="fs-3 __break-word-dots">
                                    Số điện thoại: @Model.Phone
                                </p>
                            </div>
                        }

                        <div class="d-flex justify-content-center">
                            <a class="_btn" asp-action="OrderHistory"><p class="text-white mb-0 text-center">Lịch sử đơn hàng</p></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12 pt-3 px-5">
            <div class="h-100 px-lg-5 px-md-3 mt-lg-0 mt-5">
                <form method="post" asp-action="UpdateInfo">
                    <div class="row gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mb-2 fs-2 text-dark">Thông tin cá nhân</h6>
                        </div>
                        <div class="col-xl-8 col-lg-8 col-md-7 col-sm-6 col-12">
                            <div class="form-group">
                                <input asp-for="@Model.Fullname" type="text" class="_form-input" id="fullName" placeholder="Họ và Tên" value="@Model.Fullname">
                            </div>
                        </div>

                        <div class="col-xl-4 col-lg-4 col-md-5 col-sm-6 col-12">
                            <div class="form-group">
                                <input asp-for="@Model.Phone" type="text" class="_form-input" id="phone" placeholder="Số điện thoại" value="@Model.Phone">
                            </div>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <input asp-for="@Model.Email" type="email" class="_form-input" id="email" placeholder="Email" value="@Model.Email">
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-group">
                                <input asp-for="@Model.Address" type="text" class="_form-input" id="address" placeholder="Địa chỉ" value="@Model.Address">
                            </div>
                        </div>
                    </div>
                    <div class="row gutters mt-4">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h6 class="mt-3 mb-2 text-dark fs-2">Thẻ tín dụng</h6>
                        </div>
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <div class="form-group">
                                <input asp-for="@Model.CardNumber" type="text" class="_form-input" placeholder="Số thẻ" value="@Model.CardNumber">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input asp-for="@Model.ValidDate" type="date" class="_form-input" placeholder="Ngày hết hạn" asp-format="{0:yyyy-MM-dd}">
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                            <div class="form-group">
                                <input asp-for="@Model.SecretNumber" type="text" class="_form-input" placeholder="CVV/CVV2" value="@Model.SecretNumber">
                            </div>
                        </div>
                    </div>
                    <div class="row gutters mt-4">
                        <div class="col-xl-8 col-lg-7 col-md-7 col-sm-6 col-6">
                            <div id="error-msg-reg" class="__notify-msg" style="font-size: medium">@ViewBag.UpdateInfoMsg</div>
                            <div id="error-msg-reg" class="__error-msg" style="font-size: medium">@ViewBag.UpdateInfoErrorMsg</div>
                        </div>
                        <div class="col-xl-4 col-lg-5 col-md-5 col-sm-6 col-6">
                            <div class="d-flex justify-content-end">
                                <button type="submit" class="_update-btn my-0">Cập nhật</button>
                            </div>
                        </div>
                        <div asp-validation-summary="All" class="text-dannger mt-3 __form-validation"></div>
                        </div>
</form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}