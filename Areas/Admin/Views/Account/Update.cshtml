@{
    ViewData["Title"] = "Quản lý tài khooản khách hàng";
}
@model Clothing_Store.Areas.Admin.Models.AdminUpdateAcccountViewModel
@{
    AdminAccountDetailsViewModel account = Model.details;
}

<div class="container pt-5 px-5">
    <div class="main-body">
        <div class="row">
            <div class="col-lg-4">
                <div class="__ac-page-card">
                    <div class="card-body px-4">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/images/profile1.jpg" alt="Admin" class="rounded-circle p-1" width="110">
                            <div class="my-3">
                                <h4>@account.UserName</h4>
                                <div>
                                    <p class="text-secondary">@account.Email</p>
                                </div>
                                <div class="my-2">
                                    <div class="text-dark fs-5">Họ và tên: @account.Fullname</div>
                                </div>
                                <div class="my-2">
                                    <div class="text-dark fs-5">Số điện thoại: @account.Phone</div>
                                </div>
                            </div>
                        </div>
                        <ul class="list-group list-group-flush border-top">
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <span> Tổng số hóa đơn:</span>
                                <span class="text-secondary">@account.TotalOrder hóa đơn</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap">
                                <span> Tổng tiền:</span>
                                <span class="text-secondary">@(account.TotalPayment != 0 ? account.TotalPayment.ToString("#,###", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) : "0") đ</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="__ac-page-card">
                    <form asp-action="Update" asp-route-id="@account.ID">
                        <div class="card-body">
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Mã khách hàng</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input disabled type="text" class="form-control" value="@account.ID">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Tên tài khoản</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input disabled type="text" class="form-control" value="@account.UserName">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Họ và tên</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.Fullname" type="text" class="form-control AcUpdateInput" value="@account.Fullname">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.Email" type="text" class="form-control AcUpdateInput" value="@account.Email">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Số điện thoại</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.Phone" type="text" class="form-control AcUpdateInput" value="@account.Phone">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Địa chỉ</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.Address" type="text" class="form-control AcUpdateInput" value="@account.Address">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Số thẻ</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.CardNumber" type="text" class="form-control AcUpdateInput" value="@account.CardNumber">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>CVV/CVV2</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.SecretNumber" type="text" class="form-control AcUpdateInput" value="@account.SecretNumber">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3 align-self-center">
                                    <h6>Hạn sử dụng</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <input asp-for="updateModel.ValidDate" type="date" class="form-control AcUpdateInput" value="@(account.ValiDate.ToString("yyyy-MM-dd") != "0001-01-01" ? account.ValiDate.ToString("yyyy-MM-dd") : "")">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div class="col-sm-3"></div>
                                <div class="col-sm-9 text-secondary">
                                    <input type="submit" class="btn btn-primary px-4 me-3 mt-3" value="Cập nhật thông tin">
                                </div>
                            </div>
                            <div class="row m-3">
                                <div asp-validation-summary="All" class="col-12 text-danger"></div>
                                <div class="col-12 text-danger AcUpdateMess">@ViewBag.acUpdateError</div>
                                <div class="col-12 text-success AcUpdateMess">@ViewBag.acUpdateSuccess</div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

